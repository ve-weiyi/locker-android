<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginVertical="@dimen/dp_5"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/light_blue"
            app:cardCornerRadius="@dimen/dp_6"
            app:cardElevation="@dimen/dp_1">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/dp_10"
                android:paddingLeft="10dp"
                >

            <ImageView
                    android:id="@+id/item_iv_privacy_info_time_create"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_alignBottom="@+id/item_privacy_info_update_time"
                    android:layout_alignTop="@+id/item_privacy_info_update_time"
                    android:layout_below="@+id/item_privacy_info_name"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/item_privacy_info_desc"
                    android:src="@drawable/ic_play_time_gray" />

            <ImageView
                    android:id="@+id/item_iv_privacy_info_time"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/item_privacy_info_update_time"
                    android:layout_alignTop="@+id/item_privacy_info_update_time"
                    android:layout_below="@+id/item_privacy_info_name"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/item_privacy_info_create_time"
                    android:src="@drawable/ic_play_time_gray" />

            <ImageView
                    android:id="@+id/viewpager_list_button"
                    android:layout_width="15dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:focusable="true"
                    android:src="@drawable/ic_more_gray" />

            <TextView
                    android:id="@+id/item_privacy_info_type"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="5dp"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="1"
                    android:background="@drawable/shape_oval_primary"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            <TextView
                    android:id="@+id/item_privacy_info_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/item_privacy_info_type"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="我的邮箱账号"
                    android:textColor="@color/listTextColor"
                    android:textSize="15sp" />

            <TextView
                    android:id="@+id/item_privacy_info_desc"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/item_privacy_info_name"
                    android:layout_below="@+id/item_privacy_info_name"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="5dp"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:text="一个私密的邮箱账号，请不要告诉其他人哦"
                    android:textSize="10sp" />
            
            <TextView
                    android:id="@+id/item_privacy_info_create_time"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_privacy_info_name"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/item_iv_privacy_info_time_create"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:text="2022-01-11"
                    android:textSize="10sp" />

            
            <TextView
                    android:id="@+id/item_privacy_info_update_time"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_privacy_info_name"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/item_iv_privacy_info_time"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:text="2022-01-11"
                    android:textSize="10sp" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>