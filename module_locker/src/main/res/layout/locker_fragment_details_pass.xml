<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/dp_10"
                android:orientation="vertical">

            <com.ve.module.locker.ui.view.PrivacyItemView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:paddingBottom="10dp"
                    app:paddingLeft="0dp"

                    app:titleTextSize="7sp"
                    app:titleTextColor="@color/blue"
                    app:titleText="标题"

                    app:editText="hhhh"
                    app:editTextBackground="@drawable/shape_round_grey"
                    app:rightText="复制"
                    app:rightTextSize="7sp"
                    app:rightTextColor="@color/blue"
                    app:rightIcon="@drawable/ic_baseline_eye_24"
                    app:tileText="主账号管理" />


            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/tv_item_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/blue"
                        android:text="账号" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/tv_item_account"
                        android:gravity="end"

                        >

                    <EditText
                            android:layout_weight="1"
                            android:id="@+id/et_detail_account"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_10"
                            android:layout_gravity="center_vertical"
                            android:drawableEnd="@drawable/ic_baseline_clear_24"
                            android:background="@drawable/shape_round_grey"
                            android:hint="791422171" />

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/dp_10"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_baseline_eye_24" />

                    <TextView
                            android:id="@+id/item_account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/blue"
                            android:text="复制" />
                </LinearLayout>
            </RelativeLayout>


            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/tv_item_account1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/blue"
                        android:text="密码" />

                <LinearLayout
                        android:id="@+id/password_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/tv_item_account1"
                        android:gravity="end"

                        >

                    <EditText
                            android:layout_weight="1"
                            android:id="@+id/et_detail_password"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_10"
                            android:layout_gravity="center_vertical"
                            android:drawableEnd="@drawable/ic_baseline_clear_24"
                            android:background="@drawable/shape_round_grey"
                            android:hint="791422171" />

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/dp_10"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_baseline_eye_24" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/blue"
                            android:text="复制" />
                </LinearLayout>

                <TextView
                        android:id="@+id/et_detail_password_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/dp_10"
                        android:paddingHorizontal="@dimen/dp_10"
                        android:layout_below="@id/password_layout"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/blue"
                        android:background="@drawable/shape_round_grey_tag"
                        android:text="密码" />
            </RelativeLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp_20">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/dp_20"
                        android:textStyle="bold"
                        android:textColor="@color/blue"
                        android:text="链接" />

                <EditText
                        android:id="@+id/et_detail_url"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/dp_10"
                        android:background="@drawable/shape_round_grey"
                        android:hint="https://ve77.cn/blog" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp_20">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/dp_20"
                        android:textStyle="bold"
                        android:textColor="@color/blue"
                        android:text="电话" />

                <EditText
                        android:id="@+id/et_detail_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/dp_10"
                        android:background="@drawable/shape_round_grey"
                        android:hint="15623356029" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp_20">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/dp_20"
                        android:textStyle="bold"
                        android:textColor="@color/blue"
                        android:text="所属app" />

                <EditText
                        android:id="@+id/et_detail_app"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/dp_10"
                        android:background="@drawable/shape_round_grey"
                        android:hint="locker" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp_20">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/dp_20"
                        android:textStyle="bold"
                        android:textColor="@color/blue"
                        android:text="备注" />

                <EditText
                        android:id="@+id/et_detail_remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/dp_10"
                        android:background="@drawable/shape_round_grey"
                        android:hint="@string/locker_about_content" />
            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</layout>