<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorBackground"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_marginHorizontal="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_100"
                    android:background="@drawable/shape_round_white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="@dimen/dp_10"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/blue"
                            android:text="称呼" />

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/et_detail_nickname"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/InputTextLayoutStyle.ClearText">

                            <EditText

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/dp_10"
                                    android:hint="必填项"
                                    />
                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/blue"
                            android:text="名字" />

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                                android:layout_weight="1"
                                android:id="@+id/et_detail_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/InputTextLayoutStyle.ClearText">

                            <EditText

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/dp_10"
                                    tools:hint="12312421" />
                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/blue"
                            android:text="手机号" />

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                                android:layout_weight="1"
                                android:id="@+id/et_detail_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/InputTextLayoutStyle.ClearText">

                            <EditText

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/dp_10"
                                    tools:hint="15623356029" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/blue"
                            android:text="住址" />

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                                android:layout_weight="1"
                                android:id="@+id/et_detail_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/InputTextLayoutStyle.ClearText">

                            <EditText

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/dp_10"
                                    tools:hint="湖北省 武汉市 华中科技大学" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/tv_item_url"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/blue"
                            android:text="部门" />

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_item_owner"
                            android:gravity="end"
                            android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                                android:layout_weight="1"
                                android:id="@+id/et_detail_department"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/InputTextLayoutStyle.ClearText">

                            <EditText

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/dp_10"
                                    android:hint=""
                                    />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/blue"
                            android:text="qq" />

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_item_owner"
                            android:gravity="end"
                            android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                                android:layout_weight="1"
                                android:id="@+id/et_detail_qq"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/InputTextLayoutStyle.ClearText">

                            <EditText

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/dp_10"
                                    android:hint=""
                                    />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/blue"
                            android:text="邮箱" />

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_item_owner"
                            android:gravity="end"
                            android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                                android:layout_weight="1"
                                android:id="@+id/et_detail_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/InputTextLayoutStyle.ClearText">

                            <EditText

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/dp_10"
                                    android:hint=""
                                    />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/dp_10">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/dp_16"
                            android:layout_marginVertical="10dp"
                            android:textColor="@color/blue"
                            android:text="备注" />

                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_weight="1"
                            android:id="@+id/et_detail_remark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/InputTextLayoutStyle.ClearText">

                        <com.google.android.material.textfield.TextInputEditText
                                android:paddingHorizontal="@dimen/dp_10"

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/dp_10"
                                android:paddingBottom="40dp"
                                tools:hint="@string/text_content" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</layout>